// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "session": {
    "trust_all_worktrees": true,
  },
  "terminal": {
    "env": {},
    "font_size": 12.0,
    "font_weight": 300,
    "font_family": "Iosevka Nerd Font Mono",
    "blinking": "on",
    "copy_on_select": false,
  },
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "base_keymap": "VSCode",
  "agent": {
    "enabled": true,
    "button": true,
    "favorite_models": [],
    "model_parameters": [],
  },
  "preview_tabs": {
    "enabled": true,
  },
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "seed_search_query_from_cursor": "selection",
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": true,
  },
  "vertical_scroll_margin": 5.0,
  "gutter": {
    "line_numbers": true,
    "folds": true,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "axes": {
      "vertical": false,
    },
  },
  "current_line_highlight": "gutter",
  "cursor_shape": "bar",
  "cursor_blink": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 300,
    },
  },
  "buffer_font_fallbacks": ["Iosevka SS05 Light", "ZhuqueFangsong-Regular", "Alibaba PuHuiTi 3.0"],
  "file_types": {
    "ini": ["**/*.cnf"],
    "makefile": ["*.custom"],
    "dockerfile": ["Dockerfile-private"],
    "sql": ["*.result", "*.test", "**/*.inc", "**/*.test"],
    "log": ["*.0", "*.err", "*.case-2", "*.log", "*.txt", "*.hg"],
  },
  "colorize_brackets": true,
  "use_auto_surround": true,
  "show_whitespaces": "trailing",
  "show_edit_predictions": false,
  "ensure_final_newline_on_save": true,
  "indent_guides": {
    "enabled": true,
  },
  "wrap_guides": [80],
  "preferred_line_length": 120,
  "soft_wrap": "none",
  "hard_tabs": false,
  "tab_size": 2,
  "vim_mode": true,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 300.0,
  "buffer_font_family": "Iosevka SS16",
  "ui_font_family": "Iosevka Fixed SS05",
  "ui_font_size": 16,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "Sharp Solarized",
    "dark": "Ayu Dark",
  },
}
